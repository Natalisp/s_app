<div class="center">
<br>
<br>

<%= form_for @person do |f| %>

<% if @person.errors.any? %>
    <div id="error_explanation">
      <ul style="list-style-type:none">
       <% @person.errors.each do |attr, msg| %>
         <li><%= msg %></li>
       <% end %>
      </ul>
     </div>
  <% end %>

  <div class="field">
    <label>Name: </label>
    <%= f.text_field :name, :title => "Name" %>
  </div>
  <div class="field">  
    <label>Favorite City: </label>
    <%= f.text_field :favoriteCity, :title => "City" %>
  </div>
  <div class="actions">
   <%= f.submit "Add New", :class => 'button green' %>
  </div>
<% end %>

</div>
