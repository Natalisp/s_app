<div class="center">
<%= form_for @person do |f| %>

<% if @person.errors.any? %>
    <div id="error_explanation">
      <ul style="list-style-type:none">
       <% @person.errors.each do |attr, msg| %>
         <li><%= msg %></li>
       <% end %>
      </ul>
     </div>
  <% end %>

  <div class="field">
    <label>Name: </label>
    <%= f.text_field :name, :title => "Name" %><br>
  </div>
  <br>
  <div class="field">
    <label>Favorite City: </label>
    <%= f.text_field :favoriteCity, :title => "City" %><br>
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>  </div>
  <br>
  <div class="actions">
    <%= f.submit "Update", :class => 'button' %>
  </div>
 <% end %>
</div>
